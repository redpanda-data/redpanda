cmake_minimum_required(VERSION 3.9.0)
project(build-deps NONE)
cmake_host_system_information(
  RESULT build_concurrency_factor
  QUERY NUMBER_OF_LOGICAL_CORES)
set(info_dir --infodir=@V_DEPS_INSTALL_DIR@/share/info)
include(ExternalProject)

set(c_flags "@BASE_C_FLAGS@")
set(cxx_flags "@BASE_CXX_FLAGS@")
set(ld_flags "@BASE_LD_FLAGS@")
set(default_depends "")

set(common_cmake_args
  -DCMAKE_CXX_STANDARD=@CMAKE_CXX_STANDARD@
  -DCMAKE_C_FLAGS=@CMAKE_C_FLAGS@
  -DCMAKE_BUILD_TYPE=@CMAKE_BUILD_TYPE@
  -DCMAKE_PREFIX_PATH=@V_DEPS_INSTALL_DIR@
  -DCMAKE_INSTALL_PREFIX=@V_DEPS_INSTALL_DIR@
  -DCMAKE_INSTALL_RPATH=@V_DEPS_INSTALL_DIR@/lib
  -DCMAKE_SKIP_BUILD_RPATH=OFF
  -DCMAKE_BUILD_WITH_INSTALL_RPATH=ON
  -DCMAKE_POSITION_INDEPENDENT_CODE=@CMAKE_POSITION_INDEPENDENT_CODE@
)


# build environment variables

# pkgconfig
set(ENV{PKG_CONFIG_PATH}  @PKG_CONFIG_PATH@)

# cmake build environment
set(cmake_build_env
  PKG_CONFIG_PATH=@PKG_CONFIG_PATH@
  LDFLAGS=${ld_flags}
  CFLAGS=${c_flags}
  CXXFLAGS=-std=c++17\ ${cxx_flags}
  CPPFLAGS=-std=c++17\ ${cxx_flags}
  )
# seastar needs explicit -g and -lc++experimental on clang
if (@CMAKE_CXX_COMPILER_ID@ MATCHES "Clang")
  set(seastar_cpp_experimental_linker_flag "-lc++experimental")
endif()
set(seastar_build_env
  PKG_CONFIG_PATH=@PKG_CONFIG_PATH@
  LDFLAGS=${ld_flags}\ ${seastar_cpp_experimental_linker_flag}
  CFLAGS=${c_flags}
  CXXFLAGS=-std=c++17\ ${cxx_flags}\ -g
  CPPFLAGS=-std=c++17\ ${cxx_flags}\ -g
  )
# autotools
set(build_env
  CFLAGS=${c_flags}
  CXXFLAGS=${cxx_flags}
  CPPFLAGS=${cxx_flags}
  LDFLAGS=${ld_flags}
  PKG_CONFIG_PATH=@PKG_CONFIG_PATH@)
# nettle needs explicit path to headers
set(nettle_build_env
  CFLAGS=${c_flags}\ -I@V_DEPS_INSTALL_DIR@/include
  LDFLAGS=${ld_flags}
)

# define make command in terms of cmake
set(make_command make ${build_env} -j${build_concurrency_factor} )

ExternalProject_Add(zlib
  URL https://storage.googleapis.com/vectorizedio-public/dependencies/zlib-1.2.11.tar.gz
  URL_MD5 1c9f62f0778697a09d36121ead88e08e
  INSTALL_DIR @V_DEPS_INSTALL_DIR@
  DEPENDS ${default_depends}
  CMAKE_COMMAND ${CMAKE_COMMAND} -E env ${cmake_build_env} ${CMAKE_COMMAND}
  CMAKE_ARGS
    ${common_cmake_args}
  )


# ----------- libcxxabi and libcxx for clang

if (@CMAKE_CXX_COMPILER_ID@ MATCHES "Clang")
    set(toolset clang)
    set(dpdk_compiler clang)
    # Boost build user config
    set(boost_user_config_jam "using clang : : @CMAKE_CXX_COMPILER@ $<SEMICOLON>")
    set(default_depends libcxx)
    ExternalProject_Add(libcxxabi
        SOURCE_DIR @CMAKE_BINARY_DIR@/../../llvm/llvm-src/libcxxabi
        INSTALL_DIR @V_DEPS_INSTALL_DIR@
        CMAKE_ARGS
            ${common_cmake_args}
            -DLLVM_PATH=@CMAKE_BINARY_DIR@/../../llvm/llvm-src/llvm
            -DLIBCXXABI_LIBCXX_PATH=@CMAKE_BINARY_DIR@/../../llvm/llvm-src/libcxx
            -DLIBCXXABI_C_FLAGS=${c_flags}
            -DLIBCXXABI_CXX_FLAGS=${cxx_flags}
            -DLIBCXXABI_LINK_FLAGS=${ld_flags}
        DEPENDS zlib)
    ExternalProject_Add(libcxx
        SOURCE_DIR @CMAKE_BINARY_DIR@/../../llvm/llvm-src/libcxx
        INSTALL_DIR @V_DEPS_INSTALL_DIR@
        CMAKE_ARGS
            ${common_cmake_args}
            -DLLVM_PATH=@CMAKE_BINARY_DIR@/../../llvm/llvm-src/llvm
            -DLIBCXX_CXX_ABI=libcxxabi
            -DLIBCXX_CXX_ABI_INCLUDE_PATHS=@CMAKE_BINARY_DIR@/../../llvm/llvm-src/libcxxabi/include
            -DLIBCXX_CXX_ABI_LIBRARY_PATH=@V_DEPS_INSTALL_DIR@/lib
            -DLIBCXX_LINK_FLAGS=${ld_flags}
            DEPENDS libcxxabi)
    ExternalProject_Add_Step(libcxx install-experimental
                COMMAND           ${CMAKE_COMMAND} -E copy lib/libc++experimental.a @V_DEPS_INSTALL_DIR@/lib
                WORKING_DIRECTORY <BINARY_DIR>
                COMMENT           "Installing lc++experimental.a"
                DEPENDEES         build
                EXCLUDE_FROM_MAIN FALSE)
elseif (@CMAKE_CXX_COMPILER_ID@ STREQUAL "GNU")
    set(toolset gcc)
    # Boost build user config
    set(boost_user_config_jam "using gcc : : @CMAKE_CXX_COMPILER@ : $<SEMICOLON>")
endif()

