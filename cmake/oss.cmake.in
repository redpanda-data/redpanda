ExternalProject_Add(roaring
  GIT_REPOSITORY https://github.com/vectorizedio/CRoaring.git
  GIT_TAG 7b9c83740d4f764941d38144cc8e2122076e38e4
  INSTALL_DIR    @REDPANDA_DEPS_INSTALL_DIR@
