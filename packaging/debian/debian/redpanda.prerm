#!/bin/sh

set -e

case "$1" in
    purge|remove)
        # Try to stop all the redpanda systemd units.
        # If something fails, ignore it (the unit files
        # might have been moved or fiddled with, etc.)
        systemctl stop redpanda || :
        systemctl stop redpanda-tuner || :
        systemctl stop redpanda.slice || :
        ;;
    *)
        ;;
esac

