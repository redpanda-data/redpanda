{
    "compilerOptions": {
        "outDir": "../../build/node/output/",
        "baseUrl": "../../build/node/node_modules/",
        "paths": {
            "*": ["*"],
            "buffer": ["@types/node/"],
            "mocha": ["@types/mocha/"]
        },
        "newLine": "lf",
        "downlevelIteration": true,
        "lib": ["esnext"],
        "skipLibCheck": true
    },
    "include": [
        "modules/rpc",
        "modules/hashing",
        "modules/utilities",
        "modules/supervisors",
        "test"
    ],
    "exclude": [
        "node_modules/*",
        "packages/"
    ]
}
